extends base

block content 
    section.section-header
        .header__hero
            .header__hero-overlay &nbsp;
            img.header__hero-img(src=`/img/work.jpg`, alt=`cover`)

        .heading-box
            .heading-box__group
                .heading-box__detail
                    span.heading-box__text= `Hello. I am....`
            h1.heading-primary
                span= `Falence Lemungoh`
            .heading-box__group
                .heading-box__detail
                    svg.heading-box__icon
                        use(xlink:href='/img/icons.svg#icon-box')
                    span.heading-box__text= `Backend Engineer`
    
    main.main
        .card-container

                
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`img/me.jpg`)
                        
                        h3.heading me
                    
                    .card__details
                        h4.card__sub-heading= `-day tour`
                        p.card__text summary 
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-map-pin')
                            span description
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-calendar')
                            span startDates)
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-flag')
                            span= ` stops`
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-user')
                            span= ` people`

                    .card__footer
                        p
                            span.card__footer-value price
                            | 
                            span.card__footer-text per person
                        p.card__ratings
                            span.card__footer-value ratingsAverage
                            | 
                            span.card__footer-text= `rating `
                        a.btn.btn--green.btn--small(href=`/tours/`) Details
